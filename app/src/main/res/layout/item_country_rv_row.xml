<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="country"
            type="com.example.kotlincountrylist.model.Country" />
        <variable
            name="listener"
            type="com.example.kotlincountrylist.adapter.CountryClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/linearLayoutCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="@{()->listener.onCountryClicked(linearLayoutCard,country.uuid)}"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@color/grey">

        <TextView
            android:id="@+id/countryUuidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@{String.valueOf(country.uuid)}"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="3dp"
            android:contentDescription="@string/country_flag"
            app:downloadUrl="@{country.countryFlagUrl}">

        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_countryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{country.countryName}"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="5dp"
                android:contentDescription="@string/country_name"/>

            <TextView
                android:id="@+id/tv_countryRegion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{country.countryRegion}"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:padding="5dp"
                android:contentDescription="@string/country_region">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</layout>